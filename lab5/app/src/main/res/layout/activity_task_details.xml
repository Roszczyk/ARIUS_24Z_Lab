<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tytuł zadania -->
    <TextView
        android:id="@+id/taskDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Szczegóły zadania -->
    <TextView
        android:id="@+id/taskDetailsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="16dp" />

    <!-- Termin zadania -->
    <TextView
        android:id="@+id/taskDetailsDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline: YYYY-MM-DD HH:mm"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginBottom="16dp" />

    <!-- Przyciski zmiany statusu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/markAsCompletedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Completed" />

        <Button
            android:id="@+id/markAsPendingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Pending"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
